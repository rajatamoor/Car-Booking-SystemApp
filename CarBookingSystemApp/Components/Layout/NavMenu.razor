@using CarBookingSystem.UI.Services
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Car Booking System</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="bi bi-house me-2"></span> Home
            </NavLink>
        </div>

        @if (Auth.IsAuthenticated)
        {
            @if (Auth.Role == "Customer")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/customer/bookride">
                        <span class="bi bi-car-front me-2"></span> Book Ride
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/customer/mybookings">
                        <span class="bi bi-list-check me-2"></span> My Bookings
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/customer/mypayments">
                        <span class="bi bi-credit-card me-2"></span> My Payments
                    </NavLink>
                </div>
            }

            @if (Auth.Role == "Driver")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/driver/pendingrides">
                        <span class="bi bi-clock-history me-2"></span> Pending Rides
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/driver/acceptedrides">
                        <span class="bi bi-car-front me-2"></span> Accepted Rides
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/driver/earnings">
                        <span class="bi bi-cash-coin me-2"></span> My Earnings
                    </NavLink>
                </div>
            }

            @if (Auth.Role == "Admin")
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/dashboard">
                        <span class="bi bi-speedometer2 me-2"></span> Dashboard
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/allbookings">
                        <span class="bi bi-journal-text me-2"></span> All Bookings
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/paymentcollection">
                        <span class="bi bi-cash-coin me-2"></span> Payment Collection
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/managedrivers">
                        <span class="bi bi-person-badge me-2"></span> Manage Drivers
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/managecars">
                        <span class="bi bi-truck me-2"></span> Manage Cars
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/manageusers">
                        <span class="bi bi-people me-2"></span> Manage Users
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/admin/reports">
                        <span class="bi bi-bar-chart me-2"></span> Reports
                    </NavLink>
                </div>
            }
        }
    </nav>
</div>

@code {
    [Inject] private AuthService Auth { get; set; }

    private bool collapseNavMenu = true;
    private string NavMenuCssClass => collapseNavMenu ? "collapse" : "";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}