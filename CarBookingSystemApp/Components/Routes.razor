@using Microsoft.AspNetCore.Components.Authorization

<Router AppAssembly="@typeof(MauiProgram).Assembly">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(Layout.MainLayout)">
            <NotAuthorized Context="authContext">
                <LayoutView Layout="@typeof(Layout.MainLayout)">
                    <div class="container mt-5 text-center">
                        <div class="alert alert-danger shadow-sm d-inline-block p-5">
                            <i class="bi bi-shield-lock-fill display-1 mb-3 text-danger"></i>
                            <h2 class="alert-heading">Access Denied</h2>
                            <p class="lead">You do not have permission to access this page.</p>
                            <hr>
                            <p class="mb-0">
                                You are currently logged in as: <strong>@(authContext.User.Identity?.IsAuthenticated == true ? authContext.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "User" : "Anonymous")</strong>
                            </p>
                            <div class="mt-4">
                                <a href="/" class="btn btn-primary">Go Home</a>
                            </div>
                        </div>
                    </div>
                </LayoutView>
            </NotAuthorized>
            <Authorizing>
                <div class="d-flex justify-content-center mt-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </Authorizing>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(Layout.MainLayout)">
            <div class="container mt-5 text-center">
                <h3 class="display-1 fw-bold">404</h3>
                <p class="lead">Page not found.</p>
                <a href="/" class="btn btn-secondary">Go Home</a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
