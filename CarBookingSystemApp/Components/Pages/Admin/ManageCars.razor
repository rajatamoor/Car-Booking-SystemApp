@page "/admin/managecars"

@using CarBookingSystem.Domain
@using CarBookingSystemApp.Components.Layout
@using Microsoft.AspNetCore.Authorization
@using Microsoft.JSInterop

@layout MainLayout
@attribute [Authorize(Roles = "Admin")]

@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JSRuntime



<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="bi bi-truck me-2"></i> Manage Cars</h3>
        <button class="btn btn-success" @onclick="ShowAddCarModal">
            <i class="bi bi-plus-circle me-1"></i> Add New Car
        </button>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Car Fleet</h5>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading cars...</p>
                </div>
            }
            else if (cars != null && cars.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Make</th>
                                <th>Model</th>
                                <th>Year</th>
                                <th>Plate Number</th>
                                <th>Color</th>
                                <th>Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in cars)
                            {
                                <tr>
                                    <td>@car.Id</td>
                                    <td>@car.Make</td>
                                    <td>@car.Model</td>
                                    <td>@car.Year</td>
                                    <td>
                                        <span class="badge bg-dark">@car.PlateNumber</span>
                                    </td>
                                    <td>
                                        <span class="badge" style="background-color: @car.Color; color: white;">
                                            @car.Color
                                        </span>
                                    </td>
                                    <td>@car.Type</td>
                                    <td>
                                        <span class="badge @GetCarStatusBadge(car.Status)">
                                            @car.Status
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary me-1"
                                                @onclick="() => EditCar(car)">
                                            <i class="bi bi-pencil"></i> Edit
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger"
                                                @onclick="() => DeleteCar(car.Id)">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i> No cars found in the fleet.
                </div>
            }
        </div>
    </div>
</div>

<!-- Add/Edit Car Modal -->
@if (showCarModal)
{
    <div class="modal show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-truck me-1"></i>
                        @(isEditing ? "Edit Car" : "Add New Car")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseCarModal"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Make *</label>
                                <input type="text" class="form-control" @bind="currentCar.Make" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Model *</label>
                                <input type="text" class="form-control" @bind="currentCar.Model" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Year</label>
                                <input type="number" class="form-control" @bind="currentCar.Year"
                                       min="2000" max="@DateTime.Now.Year" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Plate Number *</label>
                                <input type="text" class="form-control" @bind="currentCar.PlateNumber" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Color</label>
                                <input type="text" class="form-control" @bind="currentCar.Color" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Type</label>
                                <select class="form-select" @bind="currentCar.Type">
                                    <option value="Sedan">Sedan</option>
                                    <option value="SUV">SUV</option>
                                    <option value="Hatchback">Hatchback</option>
                                    <option value="Van">Van</option>
                                    <option value="Luxury">Luxury</option>
                                </select>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Status</label>
                            <select class="form-select" @bind="currentCar.Status">
                                <option value="Available">Available</option>
                                <option value="Booked">Booked</option>
                                <option value="Maintenance">Maintenance</option>
                                <option value="OutOfService">Out of Service</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Driver (Optional)</label>
                            <select class="form-select" @bind="currentCar.DriverId">
                                <option value="">-- Select Driver --</option>
                                @foreach (var driver in drivers)
                                {
                                    <option value="@driver.Id">@driver.Name</option>
                                }
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCarModal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" @onclick="SaveCar">
                        @(isEditing ? "Update" : "Save")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<CarDto> cars = new();
    private List<DriverDto> drivers = new();
    private bool isLoading = true;
    private bool showCarModal = false;
    private bool isEditing = false;
    private CarDto currentCar = new();
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        await LoadCars();
        await LoadDrivers();
    }

    private async Task LoadCars()
    {
        isLoading = true;
        try
        {
            cars = await Http.GetFromJsonAsync<List<CarDto>>("api/admin/cars") ?? new();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading cars: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadDrivers()
    {
        try
        {
            drivers = await Http.GetFromJsonAsync<List<DriverDto>>("api/admin/drivers") ?? new();
        }
        catch
        {
            drivers = new List<DriverDto>
            {
                new DriverDto { Id = 1, Name = "John Smith" },
                new DriverDto { Id = 2, Name = "Mike Johnson" },
                new DriverDto { Id = 3, Name = "Sarah Williams" }
            };
        }
    }

    private void ShowAddCarModal()
    {
        currentCar = new CarDto
        {
            Year = DateTime.Now.Year,
            Color = "Black",
            Type = "Sedan",
            Status = "Available"
        };
        isEditing = false;
        showCarModal = true;
    }

    private void EditCar(CarDto car)
    {
        currentCar = new CarDto
        {
            Id = car.Id,
            Make = car.Make,
            Model = car.Model,
            Year = car.Year,
            PlateNumber = car.PlateNumber,
            Color = car.Color,
            Type = car.Type,
            Status = car.Status,
            DriverId = car.DriverId
        };
        isEditing = true;
        showCarModal = true;
    }

    private async Task SaveCar()
    {
        try
        {
            if (isEditing)
            {
                await Http.PutAsJsonAsync($"api/admin/cars/{currentCar.Id}", currentCar);
            }
            else
            {
                await Http.PostAsJsonAsync("api/admin/cars", currentCar);
            }

            await LoadCars();
            CloseCarModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    private async Task DeleteCar(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this car?"))
        {
            try
            {
                await Http.DeleteAsync($"api/admin/cars/{id}");
                await LoadCars();
            }
            catch (Exception ex)
            {
                errorMessage = $"Error: {ex.Message}";
            }
        }
    }

    private void CloseCarModal()
    {
        showCarModal = false;
        currentCar = new();
    }

    private string GetCarStatusBadge(string status)
    {
        return status switch
        {
            "Available" => "bg-success",
            "Booked" => "bg-warning",
            "Maintenance" => "bg-info",
            "OutOfService" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    // Sample data for demo
    private List<CarDto> GetSampleCars()
    {
        return new List<CarDto>
        {
            new CarDto { Id = 1, Make = "Toyota", Model = "Camry", Year = 2022, PlateNumber = "ABC-123", Color = "White", Type = "Sedan", Status = "Available", DriverId = 1 },
            new CarDto { Id = 2, Make = "Honda", Model = "CR-V", Year = 2021, PlateNumber = "XYZ-789", Color = "Blue", Type = "SUV", Status = "Booked", DriverId = 2 },
            new CarDto { Id = 3, Make = "Ford", Model = "Focus", Year = 2020, PlateNumber = "DEF-456", Color = "Red", Type = "Hatchback", Status = "Available", DriverId = null },
            new CarDto { Id = 4, Make = "Mercedes", Model = "E-Class", Year = 2023, PlateNumber = "GHI-101", Color = "Black", Type = "Luxury", Status = "Maintenance", DriverId = null }
        };
    }

    public class CarDto
    {
        public int Id { get; set; }
        public string Make { get; set; } = "";
        public string Model { get; set; } = "";
        public int Year { get; set; }
        public string PlateNumber { get; set; } = "";
        public string Color { get; set; } = "Black";
        public string Type { get; set; } = "Sedan";
        public string Status { get; set; } = "Available";
        public int? DriverId { get; set; }
    }

    public class DriverDto
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
    }
}