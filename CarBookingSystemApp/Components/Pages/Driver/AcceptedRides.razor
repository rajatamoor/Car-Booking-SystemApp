@page "/driver/acceptedrides"

@using CarBookingSystem.Domain.DTOs
@using CarBookingSystem.UI.Services
@using CarBookingSystemApp.Components.Layout
@using Microsoft.AspNetCore.Authorization

@layout MainLayout

@attribute [Authorize(Roles = "Driver")]

@inject AuthService Auth
@inject BookingService BookingService

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>My Accepted Rides</h3>
        <button class="btn btn-outline-primary" @onclick="LoadAcceptedRides" disabled="@isLoading">
            @if (isLoading)
            {
                <span class="spinner-border spinner-border-sm me-2"></span>
            }
            <i class="bi bi-arrow-clockwise"></i> Refresh
        </button>
    </div>

    @if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
        </div>
    }

    @if (isLoading && acceptedRides == null)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (acceptedRides != null && acceptedRides.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Route</th>
                        <th>Car</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ride in acceptedRides)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@ride.Date.ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@ride.Date.ToString("t")</small>
                            </td>
                            <td>@ride.CustomerName</td>
                            <td>
                                <div><span class="badge bg-light text-dark border me-1">From</span> @ride.Pickup</div>
                                <div class="mt-1"><span class="badge bg-light text-dark border me-1">To</span> @ride.Dropoff</div>
                            </td>
                             <td>
                                @if (!string.IsNullOrEmpty(ride.CarPlate))
                                {
                                    <div>@ride.CarMake @ride.CarModel</div>
                                    <small class="text-muted">@ride.CarPlate</small>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td class="fw-bold text-success">$@ride.Amount</td>
                            <td>
                                <span class="badge bg-primary">@ride.Status</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-car-front display-1 text-muted mb-3"></i>
            <h4 class="text-muted">No accepted rides found</h4>
            <p class="text-secondary">Go to <a href="/driver/pendingrides">Pending Rides</a> to accept new bookings.</p>
        </div>
    }
</div>

@code {
    private List<BookingDto> acceptedRides;
    private bool isLoading = false;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadAcceptedRides();
    }

    private async Task LoadAcceptedRides()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            if (Auth.IsAuthenticated)
            {
                 acceptedRides = await BookingService.GetDriverAcceptedRides(Auth.UserId);
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Unable to load rides. Please try again later.";
            Console.WriteLine($"Error loading accepted rides: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
